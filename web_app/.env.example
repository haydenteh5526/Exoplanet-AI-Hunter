# Flask Web Application Configuration
# Copy this file to .env and modify as needed

# Flask Server Settings
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=True

# Exoplanet Matching Settings
# Number of top matching exoplanets to return
MATCHING_TOP_N=3

# Minimum number of features required for matching
MATCHING_MIN_FEATURES=3

# Similarity threshold for CONFIRMED predictions (0.0-1.0)
# Lower values return more matches, higher values are more strict
MATCHING_SIMILARITY_CONFIRMED=0.80

# Default similarity threshold for general matching (0.0-1.0)
MATCHING_SIMILARITY_DEFAULT=0.85
